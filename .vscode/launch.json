{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["/c","${fileDirname}\\debug\\${fileBasenameNoExtension}.exe","&","pause"],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "k:/code/c++/test",
      "program": "k:/code/c++/test/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}